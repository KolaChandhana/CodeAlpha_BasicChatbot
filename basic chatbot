def chatbot():
    print("Chstbot: Hello! I am your basic chatbot. Type 'exit' to end the conversation.")
    while True:
        user_input = input("you: ").lower()
        if user_input == "hello":
            print("Chatbot: Hi there! how can I help you?")
        elif user_input == "how are you":
            print("Chatbot: I'm just a program, so I didn't have feelings, but thank you for asking!")
        elif user_input == "what is your name ":
            print("chatbot: I'm your friendly chatbot!")
        elif user_input == "exit":
            print("Chatbot: Goodbye! Have a great day!")
            break
        else:
            print("Chatbot: I'm sorry, I didn't understand that.")
if __name__ == "__main__":
    chatbot()
